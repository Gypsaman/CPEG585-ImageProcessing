<Window x:Class="ImageProcessing2019.GaussianGapParam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessing2019"
        mc:Ignorable="d"
        Title="GaussianGapParam" Height="167.647" Width="242.857">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Sigma 1"/>
            <TextBox x:Name="txtsignam1" MinWidth="50"></TextBox>
            <TextBlock Text="Sigma 2"/>
            <TextBox x:Name="txtsignam2" MinWidth="50"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Button x:Name="btnOK" Content="OK" Margin="5" Click="BtnOK_OnClick"/>
            <Button x:Name="btnCancel" Content="Cancel" Margin="5" Click="BtnCancel_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
