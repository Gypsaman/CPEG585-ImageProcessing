<Window x:Class="ImageProcessing2019.BrigthenValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessing2019"
        mc:Ignorable="d"
        Title="BrigthenValue" Height="153.782" Width="252.941">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation=" Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Brighten Image By" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name ="BrightValue" MinWidth="50" VerticalAlignment="Center"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="Ok" Content="OK" Margin="5" Click="Ok_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Margin="5" Click="Cancel_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
